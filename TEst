<script language="JavaScript">

function klik()
{
var naam = prompt("Wat is uw naam?", "Voornaam");
document.write("Welkom " + naam + "<br>");

var achternaam = prompt("Wat is uw achternaam?", "Achternaam");
document.write("Welkom " + achternaam + "<br>");

var email = prompt("Wat is uw e-mail?", "Email");
document.write("Welkom " + email + "<br>");

document.write(document.location);
}
</script>

<body onload="klik()">
</body>
</html>